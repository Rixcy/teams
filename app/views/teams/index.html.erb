<p id="notice"><%= notice %></p>

<h1 class="title is-1">
  Teams
  <div class="is-pulled-right">
    <%= link_to 'New Team', new_team_path, class: 'button is-primary' %>
  </div>
</h1>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to 'Show', t, class: 'button is-small' %></td>
        <td><%= link_to 'Edit', edit_team_path(t), class: 'button is-small' %></td>
        <td><%= link_to 'Destroy', t, method: :delete, class: 'button is-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
