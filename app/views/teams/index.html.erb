<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_team_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Team', new_team_path %>
